    style.
        *{
            margin: 0;
            padding: 0;
            
        }
        body{
            overflow: hidden;
            position: relative;
        }
        #iframe-container{
            position: relative;
            width: 100%;
            min-height: 300px;
            margin: 0 auto;
        }
        #iframe-container button{
            padding: 10px 20px;
            background-color: #CDEF26;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            border: none;
            cursor: pointer;
            transform-origin: center;
            visibility: visible;
        }
        #iframe-container #iframe-wrapper{
            width: 100%;
            height: 100%;
            visibility: hidden;
            opacity: 0;
            background-color: gray;
        }
        #iframe-container iframe{
            width: 100%;
            height: auto;
            min-height: 300px;
            transform-origin: center;
        }
